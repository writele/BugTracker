@model BugTracker.Models.UserProfileView

@{
    ViewBag.Title = "User Profile";
}
<div class="col-md-12 subnav">
    <h1>User Profile: @Model.Name</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 content">
            <h3>Email: <a href="mailto:@Model.Email">@Model.Email</a></h3>

            <h3>Phone Number: @(Model.PhoneNumber ?? "N/A")</h3>

            <h3>Roles: </h3>
            <ul>
            @foreach(var role in Model.Roles)
            {
                <li>@role</li>
            }
            </ul>

            <h3>Assigned to @Model.ProjectCount projects.</h3>
            @if (Model.Roles.Contains("Submitter"))
            {
                <h3>@Model.Name has submitted @Model.TicketsSubmitted total tickets.</h3>
            }
            @if (Model.Roles.Contains("Developer")) {
            <h3>@Model.Name is currently assigned @Model.TicketsAssigned tickets. </h3>
            <h3>@Model.Name has resolved @Model.TicketsResolved total tickets.</h3>
                }
            <br /><br />
            <h4>@Html.ActionLink("Back to Project", "Details", "Projects", new { id = Model.ProjectId }, null)</h4>
        </div>
    </div>
</div>

