@model BugTracker.Models.AdminUserViewModel
@{
    ViewBag.Title = "Edit User Roles";
}

<div class="col-md-12 subnav">
    <h1>Edit User Roles - @Model.Name</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("AddRole","Admin"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <div class = "control-label col-md-2">Add Roles</div>
                        <div class="col-md-10">
                            @Html.ListBox("SelectedAbsentRoles", Model.AbsentRoles)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Save" name="AddRole" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6">
            @using (Html.BeginForm("RemoveRole", "Admin"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <div class="control-label col-md-2">Remove Roles</div>
                        <div class="col-md-10">
                            @Html.ListBox("SelectedCurrentRoles", Model.Roles)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" name="RemoveRole" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>