@model BugTracker.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="col-md-6 subnav">
    <h1>Dashboard</h1>
</div>
<div class="col-md-6 subnav">
    <h1>Welcome @Model.Name! </h1>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12 content">

@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    <p>@Html.ActionLink("Edit User Roles", "ListUsers", "Admin", new { controller="Admin", action="ListUsers"}, new { @class="btn btn-default"})</p>
}

        </div>
        <div class="col-md-6">
            <h2>Assigned Projects</h2>
            <table class="table table-striped">
                    @foreach (var project in Model.Projects)
            {
                        <tr>
                            <td>@Html.ActionLink(project.Title, "Details", "Projects", new { id = project.Id }, null)</td>
                        </tr>
                    }

            </table>
            <p>@Html.ActionLink("View All Projects", "Index", "Projects")</p>
        </div>

        <div class="col-md-6">
            <h2>Recent Tickets</h2>
            <table class="table table-striped">
                    @foreach (var ticket in Model.Tickets)
                    {
                <tr>
                    <td>@Html.ActionLink(ticket.Title, "Details", "Tickets", new { id = ticket.Id }, null)</td>
                </tr>
                    }
                </table>
            <p>@Html.ActionLink("View All Tickets", "Index", "Tickets")</p>
                </div>
    </div>
</div>